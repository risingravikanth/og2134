<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.oganalysis.entities">
	<class name="Exploration">
		<id name="id">
			<generator class="increment"/>
		</id>
		<property name="blockNo" type="string"/>
		<property name="region" type="string"/>		
		<property name="country" type="string"/>
		<property name="onShoreOrOffShore" type="string"/>
		<property name="basin" type="string"/>
		<property name="status" type="string"/>
		<property name="startDate" type="date"/> 
		<property name="operator" type="string"/>
		<property name="equityParterns" type="string"/>
		<property name="sourceEquity" type="string"/> 
		<property name="area" type="double"/>
		<property name="licenseEnddate" type="date"/>
		<property name="wellsDrilled" type="double"/>
		<property name="TwoDSeismicCompleted" type="double"/>
		<property name="ThreeDSeismic" type="double"/>
		<property name="moreInfo" type="string"/>
		<property name="notes" type="string"/>
		<property name="source" type="string"/>
		<property name="licenseNo" type="string"/>
		<!-- <property name="recordId" type="int" not-null="true" unique="true"/>-->
	</class>
	
</hibernate-mapping>	